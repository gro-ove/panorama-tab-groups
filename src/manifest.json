{
    "manifest_version": 2,
    "name": "Panorama Tab Groups",
    "description": "Tab Groups with Panorama View",
    "version": "0.8.11",
    "default_locale": "en",
    "applications": {
        "gecko": {
            "id": "panorama-tab-groups@example.com"
        }
    },
    "icons": {
        "16": "icons/logo/logo-16.png",
        "24": "icons/logo/logo-24.png",
        "32": "icons/logo/logo-32.png",
        "48": "icons/logo/logo-48.png",
        "64": "icons/logo/logo-64.png",
        "96": "icons/logo/logo-96.png"
    },
    "commands": {
        "toggle-panorama-view": {
            "suggested_key": {
                "default": "Ctrl+Shift+F"
            },
            "description": "Toggle Panorama View"
        },
        "activate-next-group": {
            "suggested_key": {
                "default": "Alt+W"
            },
            "description": "Switch to the next Tab Group"
        },
        "activate-previous-group": {
            "suggested_key": {
                "default": "Alt+Shift+W"
            },
            "description": "Switch to the previous Tab Group"
        }
        ,"activate-group-n1": { "suggested_key": { "default": "Alt+1" }, "description": "Switch to the first Tab Group" }
        ,"activate-group-n2": { "suggested_key": { "default": "Alt+2" }, "description": "Switch to the second Tab Group" }
        ,"activate-group-n3": { "suggested_key": { "default": "Alt+3" }, "description": "Switch to the third Tab Group" }
        ,"activate-group-n4": { "suggested_key": { "default": "Alt+4" }, "description": "Switch to the fourth Tab Group" }
        ,"activate-group-n5": { "suggested_key": { "default": "Alt+5" }, "description": "Switch to the fifth Tab Group" }
        ,"activate-group-n6": { "suggested_key": { "default": "Alt+6" }, "description": "Switch to the sixth Tab Group" }
        ,"activate-group-n7": { "suggested_key": { "default": "Alt+7" }, "description": "Switch to the seventh Tab Group" }
        ,"activate-group-n8": { "suggested_key": { "default": "Alt+8" }, "description": "Switch to the eight Tab Group" }
        ,"activate-group-n9": { "suggested_key": { "default": "Alt+9" }, "description": "Switch to the nineth Tab Group" }
    },

    "background": {
        "page": "background.html"
    },

    "browser_action": {
        "browser_style": true,
        "default_icon": "icons/icon.svg",
        "theme_icons": [{
            "light": "icons/icon_light.svg",
            "dark": "icons/icon.svg",
            "size": 16
        }, {
        "light": "icons/icon_light.svg",
        "dark": "icons/icon.svg",
        "size": 32
        }]
    },

    "options_ui": {
        "browser_style": true,
        "page": "options.html"
    },

    "permissions": [
        "<all_urls>",
        "tabs",
        "tabHide",
        "storage",
        "sessions",
        "downloads",
        "menus"
    ]
}
